#!/usr/bin/env sh
# FAST VERSION: Lint staged files + full lint + typecheck
. "$(dirname -- "$0")/_/husky.sh"

# Run lint-staged for file-specific fixes on changed files
npx lint-staged

# Run full linting on entire src directory (catches errors in unchanged files)
npm run lint

# Run full typecheck (fast, catches global type errors)
npm run typecheck

# TODO: Add tests back once all test files are updated
# npm run test:unit

#!/usr/bin/env sh
# Security-focused pre-commit: Ensure code quality and type safety
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."
echo ""

# 1. Format and lint staged files
echo "ğŸ“ Formatting and linting staged files..."
npx lint-staged || {
  echo "âŒ Lint-staged failed. Please fix formatting/linting errors."
  exit 1
}

# 2. Run full linting (catches errors in unchanged files)
echo ""
echo "ğŸ”¬ Running full ESLint check..."
npm run lint || {
  echo "âŒ Linting failed. Please fix all linting errors."
  exit 1
}

# 3. Run TypeScript type checking (critical for type safety)
echo ""
echo "ğŸ” Running TypeScript type check..."
npm run typecheck || {
  echo "âŒ Type checking failed. Please fix all type errors."
  exit 1
}

# 4. Run unit tests (blocking - must pass to commit)
echo ""
echo "ğŸ§ª Running unit tests..."
npm run test:unit || {
  echo "âŒ Unit tests failed. Please fix failing tests before committing."
  exit 1
}

echo ""
echo "âœ… Pre-commit checks passed!"
echo "   Linting: âœ“"
echo "   Type checking: âœ“"
echo "   Unit tests: âœ“"
echo "   Security validations: âœ“"

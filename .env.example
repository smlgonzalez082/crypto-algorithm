# ===========================================
# Crypto Grid Trading Bot Configuration
# ===========================================
# Copy this file to .env and update values
# NEVER commit .env with real credentials!
# ===========================================

# Binance API credentials
# For Binance.com: https://www.binance.com/en/my/settings/api-management
# For Binance.us: https://www.binance.us/settings/api-management
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# Use testnet for development (only works with Binance.com, not Binance.us)
BINANCE_TESTNET=false

# Set to true if using Binance.us (required for US customers)
BINANCE_US=true

# Simulation Mode - KEEP TRUE until ready for real trading
SIMULATION_MODE=true

# Server port (web dashboard)
SERVER_PORT=3002

# Node environment (development | production)
NODE_ENV=development

# CORS allowed origins (comma-separated list)
# In production, set this to your frontend domain(s)
# Example: ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ===========================================
# Multi-Pair Portfolio Mode (recommended)
# ===========================================
# Enable to trade multiple crypto pairs with correlation-aware risk management
PORTFOLIO_MODE=true

# Total capital for portfolio trading (in USDT)
TOTAL_CAPITAL=2000

# Risk strategy: conservative, moderate, aggressive
# - conservative: 60% max exposure, 40% cash reserve, lower drawdown tolerance
# - moderate: 75% max exposure, 25% cash reserve, balanced approach
# - aggressive: 90% max exposure, 10% cash reserve, higher risk tolerance
RISK_STRATEGY=moderate

# ===========================================
# Single Pair Mode (legacy)
# ===========================================
# Used when PORTFOLIO_MODE=false
TRADING_PAIR=BTCUSDT
BASE_ASSET=BTC
QUOTE_ASSET=USDT
GRID_UPPER=45000
GRID_LOWER=40000
GRID_COUNT=10
GRID_AMOUNT=0.001
GRID_TYPE=arithmetic

# Risk management
MAX_POSITION_SIZE=0.1
STOP_LOSS_PERCENT=5
DAILY_LOSS_LIMIT=100
MAX_OPEN_ORDERS=50

# Logging
LOG_LEVEL=info

# ===========================================
# AWS Cognito Authentication (Production)
# ===========================================
# Optional - leave empty for local development without authentication
# Get these from AWS Console → Cognito → User Pools after running Terraform
# COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
# COGNITO_CLIENT_ID=your_client_id_here
# COGNITO_REGION=us-east-1

# Database (SQLite - data is stored locally)
# DB_PATH=./data/trading.db

# ===========================================
# Advanced Features (10/10 Elite Bot)
# ===========================================

# POST-ONLY ORDERS (Maker-only for 40% fee reduction)
# Set to true to use GTX (Good-Til-Crossing) orders that never take liquidity
# Ensures you always get maker fees (~0.06% vs 0.1% taker fees on Binance.US)
POST_ONLY_ORDERS=true

# REAL-TIME NOTIFICATIONS
# Get instant alerts for critical events (stop-loss, profits, trends)
# Discord webhook (create at: Server Settings → Integrations → Webhooks)
DISCORD_WEBHOOK_URL=

# Email notifications via SendGrid (get API key at: https://sendgrid.com)
EMAIL_ENABLED=false
ALERT_EMAIL=
SENDGRID_API_KEY=

# Slack notifications (create webhook at: https://api.slack.com/apps)
SLACK_WEBHOOK_URL=

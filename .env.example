# ===========================================
# Crypto Grid Trading Bot Configuration
# ===========================================
# Copy this file to .env and update values
# NEVER commit .env with real credentials!
# ===========================================

# Binance API credentials
# Get your keys from: https://www.binance.com/en/my/settings/api-management
# For testnet: https://testnet.binance.vision/
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# Use testnet for development (recommended for testing)
# Set to false only when ready for live trading
BINANCE_TESTNET=true

# Trading configuration
TRADING_PAIR=BTCUSDT
GRID_UPPER=45000
GRID_LOWER=40000
GRID_COUNT=10
GRID_AMOUNT=0.001
GRID_TYPE=arithmetic

# Simulation Mode
# Set to true to paper trade without real money
# ALWAYS start with simulation mode!
SIMULATION_MODE=true

# Risk management
MAX_POSITION_SIZE=0.1
STOP_LOSS_PERCENT=5
DAILY_LOSS_LIMIT=100
MAX_OPEN_ORDERS=50

# Web interface
WEB_HOST=0.0.0.0
WEB_PORT=8000

# Logging
# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Database
DATABASE_URL=sqlite+aiosqlite:///./trading.db
